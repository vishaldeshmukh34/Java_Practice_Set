package Method;

public class Program7_MultiplicationTable {

    // Method to print tables 1 to 10
    public void printTables() {
        for (int i = 1; i <= 10; i++) {
            System.out.println("Multiplication Table of " + i);

            for (int j = 1; j <= 10; j++) {
                System.out.println(i + " x " + j + " = " + (i * j));
            }
            System.out.println(); // blank line after each table
        }
    }

    public static void main(String[] args) {
        Program7_MultiplicationTable table = new Program7_MultiplicationTable();
        table.printTables();
    }
}
